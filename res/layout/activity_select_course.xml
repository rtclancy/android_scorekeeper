<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.scorekeeper.SelectCourse" >

    <TextView
        android:id="@+id/asc_current_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current_course"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_courses"
        android:textColor="@android:color/white" />

    <ListView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_weight="0.85"
        android:background="@color/Yellow" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/asc_b_save_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Save"
            android:text="Save"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/asc_b_load"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Load"
            android:text="Load"
            android:textColor="@android:color/white" />

       <Button
            android:id="@+id/asc_b_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Done"
            android:text="Done"
            android:textColor="@android:color/white" />

       <EditText
           android:id="@+id/asc_confirm_code"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:background="@android:color/white"
           android:ems="10"
           android:inputType="number" >

           <requestFocus />
       </EditText>

    </LinearLayout>

</LinearLayout>
